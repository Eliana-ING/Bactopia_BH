# istallazione Netflow e java

export NXF_VER=22.10.8
mkdir -p ~/bin && cd ~/bin
curl -fsSL https://get.nextflow.io | bash
curl -L -o nextflow https://github.com/nextflow-io/nextflow/releases/download/v$NXF_VER/nextflow
chmod +x nextflow
(bactopia) edellolm@gruffalo:~/bin$ export PATH="$HOME/bin:$PATH"
(bactopia) edellolm@gruffalo:~/bin$ echo 'export PATH="$HOME/bin:$PATH"' >> ~/.bashrc
(bactopia) edellolm@gruffalo:~/bin$ unset JAVA_CMD
(bactopia) edellolm@gruffalo:~/bin$ unset JAVA_HOME
(bactopia) edellolm@gruffalo:~/bin$ which java
